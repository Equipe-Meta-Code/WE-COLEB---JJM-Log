{
  "compilerOptions": {
    "target": "es2015",  // Suporta async/await e Promise
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"]  // Adiciona suporte ao ES2015 e APIs do DOM
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
